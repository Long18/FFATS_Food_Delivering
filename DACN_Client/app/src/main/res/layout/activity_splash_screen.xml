<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Common.SplashScreen">

    <ImageView
        android:id="@+id/background_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="400dp"
        android:src="@drawable/splash_screen_background" />

    <ImageView
        android:id="@+id/background_brand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:paddingTop="150dp"
        android:src="@drawable/brand" />

    <TextView
        android:id="@+id/powered_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Powered by William"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/background_logo"
        app:layout_constraintStart_toStartOf="@+id/background_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>